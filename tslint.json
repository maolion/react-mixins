{
  "extends": "vts",
  "rules": {
    "only-arrow-functions": [ false ],
    "comment-format": [true, "check-space"],
    "prefer-const": false,
    "trailing-comma": [ false ],
    "no-console": [false],
    "variable-name": [
      true,
      "ban-keywords",
      "allow-pascal-case",
      "allow-trailing-underscore",
      "allow-leading-underscore"
    ]
  }
}
